mixin navigationButtons(nextLabel = 'Next', nextLink = '#')
    .button-container
        a.btn(href=nextLink) #{nextLabel}


mixin navigationButtonsLeft(nextLabel = 'Next', nextLink = '#')
    .button-container-left
        a.btn(href=nextLink) #{nextLabel}

mixin Buttons(nextLabel = 'Next', link = null)
    if link
        a.btn(href=link)= nextLabel
    else
        button.btn(type="button")= nextLabel


